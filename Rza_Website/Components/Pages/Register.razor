@page "/Register"
@using Rza_Website.Services
@using Rza_Website.Models
@using Rza_Website.Utilities
@inject NavigationManager NavigationManager
@inject CustomerService CustomerService
@inject Rza_Website.Services.CustomerService CustomerService
@inject UserSession UserSession
@rendermode InteractiveServer
<link href="/CSS/Index.css" rel="stylesheet" />


<h3 class="form-title">Register</h3>

<EditForm Model="newCustomer" OnValidSubmit="RegisterCustomer" FormName="LoginForm" class="register-form">
        <DataAnnotationsValidator />
        <ValidationSummary />
<div class="form-group">
    <label class="form-label">Username</label><br />
    <input class="form-input" required @bind="newCustomer.Username" />
</div>

<div class="form-group">
    <label class="form-label">Password</label><br />
    <input class="form-input" type="password" required @bind="newCustomer.Password" />
</div>

<div class="form-group">
    <label class="form-label">First Name</label><br />
    <input class="form-input" required @bind="newCustomer.FirstName" />
</div>

<div class="form-group">
    <label class="form-label">Last Name</label><br />
    <input class="form-input" required @bind="newCustomer.LastName" />
</div>

<div class="form-group">
    <label class="form-label">Post Code</label><br />
    <input class="form-input" @bind="newCustomer.Postcode" />
</div>

<div class="form-group">
    <label class="form-label">Phone Number</label><br />
    <input class="form-input" required type="tel" @bind="newCustomer.PhoneNumber" />
</div>

<div class="form-group">
    <label class="form-label">Email</label><br />
    <input class="form-input" type="email" @bind="newCustomer.Email" />
</div>

<div class="form-group">
    <label class="form-label">Date of Birth</label><br />
    <input class="form-input" type="date" @bind="newCustomer.DateOfBirth" />
</div>

<button class="submit-button" >Register</button>
</EditForm>

<style>
   
    /* Center Form and Add Background */
.register-form {
    display: flex;
    flex-direction: column;
    align-items: center; 
    background-color: #e9f9e5;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    margin: 0 auto; /* Centers the form container itself */
}

/* Form Title */
.form-title {
    font-size: 1.5em;
    margin-bottom: 15px;
    color: #2e7d32; 
    text-align: center;
}

/* Labels */
.form-label {
    font-weight: bold;
    margin-bottom: 2px; 
    color: #2e7d32;
    text-align: left;
    width: 100%; /* Ensures alignment in smaller screens */
}

/* Input Fields */
.form-input {
    padding: 10px;
    font-size: 1em;
    border: 1px solid #a5d6a7; 
    border-radius: 4px;
    background-color: white;
    color: #333;
    width: 100%;
    max-width: 300px;
}

/* Submit Button */
.submit-button {
    padding: 10px 20px;
    font-size: 1em;
    background-color: #2e7d32; /
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 15px;
    width: 100%;
    max-width: 300px;
    text-align: center;
}

/* Hover Effect for Submit Button */
.submit-button:hover {
    background-color: #1b5e20; /* Darker green on hover */
}



</style>

@code {
    private Customer newCustomer = new Customer();
    private string password; 

    private async Task RegisterCustomer()
    {
        await CustomerService.AddCustomerAsync(newCustomer);
        Console.WriteLine("button clicked");
        NavigationManager.NavigateTo("/Login"); 
    }

   
}
